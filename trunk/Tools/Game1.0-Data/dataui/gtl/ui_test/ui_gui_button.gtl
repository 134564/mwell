FUNCTION cycle()
{
}

FUNCTION cycleUI()
{
}

FUNCTION paint()
{
}

FUNCTION destroy()
{
	OBJECT_FREE(vmCU);
	OBJECT_FREE(demoButton1);
	OBJECT_FREE(demoButton2);
//	free buttonSrc;
}

